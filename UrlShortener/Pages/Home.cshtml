@page "/"
@model UrlShortener.Pages.HomeModel
@{
    ViewData["Title"] = "Главная";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-11 col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="NewUrl" class="form-label fw-bold">Длинный URL</label>
                        <input asp-for="NewUrl" class="form-control" placeholder="https://example.com/very/long/url" />
                        <span asp-validation-for="NewUrl" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Сократить</button>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-links table-hover align-middle">
                        <thead>
                            <tr>
                                <th style="width: 40%;">Длинный URL</th>
                                <th style="width: 25%;">Сокращенный URL</th>
                                <th style="width: 15%;" class="text-center">Дата создания</th>
                                <th style="width: 10%;" class="text-center">Кол-во переходов</th>
                                <th style="width: 15%;" class="text-center">Управление</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ShortLinks != null && Model.ShortLinks.Any())
                            {
                                @foreach (var link in Model.ShortLinks)
                                {
                                    <tr>
                                        <td>
                                            @if (Model.EditingId == link.Id)
                                            {
                                                <form method="post" asp-page-handler="Update" asp-route-id="@link.Id" id="edit-form-@link.Id"
                                                      asp-route-pageNumber="@Model.PageNumber">
                                                    <input type="url" name="newUrl" value="@link.OriginalUrl" class="form-control form-control-sm" />
                                                </form>
                                            }
                                            else
                                            {
                                                <a href="@link.OriginalUrl" target="_blank" title="@link.OriginalUrl" class="d-block text-truncate link-styled">
                                                    @link.OriginalUrl
                                                </a>
                                            }
                                        </td>

                                        <td class="text-truncate" style="max-width: 1px;">
                                            <div class="d-flex align-items-center gap-2">
                                                <a href="/@link.ShortCode" target="_blank" class="link-styled" onclick="updateClickCount(@link.Id)">
                                                    @($"{Request.Scheme}://{Request.Host}/{link.ShortCode}")
                                                </a>
                                            </div>
                                        </td>

                                        <td class="text-center">
                                            @link.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </td>

                                        <td class="text-center">
                                            <span id="clicks-@link.Id" class="badge bg-primary rounded-pill click-count-badge">
                                                @link.ClickCount
                                            </span>
                                        </td>

                                        <td class="text-center">
                                            @if (Model.EditingId == link.Id)
                                            {
                                                <div class="d-grid gap-1">
                                                    <button type="submit" form="edit-form-@link.Id" class="btn btn-primary btn-sm">
                                                        Сохранить
                                                    </button>
                                                    <a asp-page="/Home" asp-route-pageNumber="@Model.PageNumber" class="btn btn-secondary btn-sm">
                                                        Отмена
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-grid gap-1">
                                                    <a asp-page="/Home" asp-route-editId="@link.Id" asp-route-pageNumber="@Model.PageNumber"
                                                       class="btn btn-primary btn-sm">
                                                        Редактировать
                                                    </a>
                                                    <a asp-page-handler="Delete" asp-route-id="@link.Id" asp-route-pageNumber="@Model.PageNumber"
                                                       class="btn btn-primary btn-sm" onclick="return confirm('Удалить ссылку?')">
                                                        Удалить
                                                    </a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4"> Пусто </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.TotalPages > 0)
                    {
                        <nav>
                            <ul class="pagination justify-content-center mt-3">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Home" asp-route-pageNumber="@(Model.PageNumber - 1)">Назад</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-page="/Home" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Home" asp-route-pageNumber="@(Model.PageNumber + 1)">Вперед</a>
                                </li>
                            </ul>
                        </nav>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function updateClickCount(id) {
            await new Promise(r => setTimeout(r, 1000));
            try {
                const response = await fetch(`?handler=ClickCount&id=${id}`);

                if (response.ok) {
                    const data = await response.json();
                    const badge = document.getElementById(`clicks-${id}`);
                    if (badge) badge.innerText = data.count;
                }
            } catch (error) {
                console.error('Ошибка обновления счетчика:', error);
            }
        }
    </script>
}